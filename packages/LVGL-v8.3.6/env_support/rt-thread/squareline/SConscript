from building import *

cwd = GetCurrentDir()
src = ['lv_ui_entry.c']

src += Glob(cwd + '/ui/*.c')
src += Glob(cwd + '/ui/components/*.c')
src += Glob(cwd + '/ui/fonts/*.c')
src += Glob(cwd + '/ui/images/*.c')
src += Glob(cwd + '/ui/screens/*.c')

group = DefineGroup('LVGL-SquareLine', src, depend = ['PKG_USING_LVGL_SQUARELINE'])

Return('group')
